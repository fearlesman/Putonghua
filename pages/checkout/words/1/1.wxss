  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 20rpx;
  gap: 20rpx;
}

.word-h {
  width: calc(33% - 15rpx);
  padding: 10rpx 20rpx;
  font-size: large;
  border: lightblue 2rpx solid;
  border-radius: 4rpx;
