}
.lzbtn{
  height: 100rpx;
  width: 100rpx;
	position: absolute;
    left: 50%;
    top: 150%;
    transform: translate(-50%,-50%);

}
.detail_bottom{
  top: auto;
  position:relative;
}
.container2{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
.word-t{
  font-size: x-large;
  font-family:楷体;
}
.btn{
  width: max-content;
  background-color: lightblue;
  color: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  transition: background-color 0.3s ease-out;
}
.btn2{
  width: fit-content;
  background-color: lightblue;
  color: #fff;
  position: fixed;
  bottom: 50px;
  left: 0;
  right: 0;
  transition: background-color 0.3s ease-out;
}
.btn:active,
.btn2:active {
  background-color:lightslategray;
  transition: none;
}

.btnContainer{
  display: flex;
  justify-content: space-between;
}
