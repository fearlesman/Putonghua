.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.modal {
  width: 80%;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  border: solid #add8e6 2rpx;
}

.modal-content {
  padding: 20rpx;
  text-align: center;
}

.modal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.modal-body {
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.modal-footer {
  display: flex;
  justify-content: center;
  margin-top: 20rpx; /* 添加顶部间距 */
}

.modal-button {
  display: inline-block;
  padding: 10rpx 20rpx;
  background-color: #add8e6;
  color: #fff;
  font-size: 24rpx;
  border-radius: 4rpx;
}

.modal-button:first-child {
  margin-right: 10rpx; /* 设置第一个按钮的右边距 */
}

.modal-button:last-child {
  margin-left: 10rpx; /* 设置最后一个按钮的左边距 */
}

